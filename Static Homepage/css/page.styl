@import 'vars'

*
  box-sizing border-box
  font-weight 100
  color $blue

a
  text-decoration none
  color $blue

.hidden
  display none !important

html, body
  width 100%
  height 100%
  margin 0
  padding 0

body
  margin-top 56px

nav
  top 0
  position fixed
  z-index 20
  font-family 'Open Sans', sans-serif
  float left
  display inline-block
  width 100%
  background-color #fff
  color $blue
  border-bottom 1px solid #f5f5f5

  .logo
    float left
    a
      float left
      img
        float left
        height 55px
        padding 5px

  ul.top-nav
    float right
    list-style-type none
    margin 0
    padding 0

    li
      list-style-type none
      float left

      a
        display inline-block
        padding 16px
        color inherit
        text-decoration none

        &:hover
          color $hover

.page
  font-family 'Lora', serif
  font-size 1.2em
  max-width 960px
  margin auto
  padding 30px
  clear both

  h1
    font-size 2.4em

  img
    border-radius $radius
    width 100%

  p
    max-width 800px
    margin 20px auto
    line-height 1.5em
    letter-spacing 0.4px
    clear both

    &.quote
      font-size 1.7em
      color $secondary-blue
      padding 20px

  .drop
    &:first-letter
      float left
      color $hover
      font-size 3em
      line-height 3px
      padding-top 4px
      padding-right 8px
      padding-left 3px
      line-height 0.9em

footer
  background-color $blue
  font-family 'Open Sans', sans-serif
  display inline-block
  width 100%
  line-height 1.4em
  padding 20px
  float left

  .copyright
    float left
    margin-left 20px

    p
      display inline-block
      color white
      clear left
      margin 1px
      float left

      img.icon
        height 30px
        margin-bottom -9px

  .links
    float right

    ul
      float left
      list-style-type none
      padding 0
      margin 0 20px

    li
      color white
      font-size

    a
      font-size .8em
      font-weight 100
      color darken($secondary-blue, 30%)

