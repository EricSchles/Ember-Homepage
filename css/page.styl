@import 'vars'

*
  box-sizing border-box
  font-weight 100
  color $blue
  transition all ease-in-out $transition-time

a
  text-decoration none
  color $blue

  &:hover
    color $hover

.hidden
  display none !important

html, body
  width 100%
  height 100%
  margin 0
  padding 0

body
  padding-top 56px

.page
  font-family 'Lora', serif
  font-size 1.4em
  max-width 960px
  margin auto
  padding 30px
  clear both

  h1
    font-size 2em

  img
    border-radius $radius
    width 100%

  p
    display inline-block
    max-width 800px
    margin 20px auto
    line-height 1.8em
    letter-spacing 0.4px
    clear both

    &.quote
      font-size 1.7em
      color $secondary-blue
      padding 20px

    &.caption
      color #b7bcbf
      text-align center

    &.link
      cursor pointer

      &:hover
        color $hover

  .drop
    &:first-letter
      float left
      color $hover
      font-size 3.5em
      line-height 3px
      padding-top 4px
      padding-right 8px
      padding-left 3px
      line-height 0.9em