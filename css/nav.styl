@import 'vars'

nav
  top 0
  position fixed
  z-index 20
  font-family 'Open Sans', sans-serif
  float left
  display inline-block
  width 100%
  background-color #fff
  color $blue
  border-bottom 1px solid #f5f5f5

  .logo
    float left

    li
      list-style-type none
      float left
      cursor pointer

      img
        float left
        height 55px
        padding 5px

  ul.top-nav
    float right
    list-style-type none
    margin 0
    padding 0

    li
      list-style-type none
      float left
      display inline-block
      padding 16px
      color inherit
      text-decoration none
      cursor pointer

      &:hover
        color $hover

.subheader
  font-family 'Open Sans', sans-serif
  display inline-block
  width 100%

  ul
    width 100%
    float left
    text-align center
    list-style-type none
    margin auto
    padding 0

    li
      display inline-block
      padding 2em 16px

      &.active
        color $secondary-blue

      &:hover
        color $hover
        cursor pointer