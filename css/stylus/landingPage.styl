.index
    h1
        margin 30px auto 50px auto
        text-align center

    .youTubeLink
        display inline-block

        &:hover
            .triangle
                border-color transparent transparent transparent $hover

        .triangle
            position relative
            z-index 2
            top -260px
            width 0
            margin auto
            right -50%
            margin -27px
            height 0
            border-style solid
            border-width: 32.5px 0 32.5px 56.3px;
            border-color transparent transparent transparent #fff

        p
            color $secondary-blue
            width 100%
            text-align center
            display block

        &:hover
            p
                color $hover

    p
        display block