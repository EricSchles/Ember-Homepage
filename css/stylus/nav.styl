nav, .subheader
  font-family 'Open Sans', sans-serif
  display inline-block
  width 100%
  text-transform uppercase
  font-size 14px

nav
  top 0
  position fixed
  z-index 20
  float left
  background-color #fff
  color $blue
  border-bottom 1px solid #f5f5f5

  .logo
    float left

    li
      list-style-type none
      float left
      cursor pointer

      img
        float left
        height 55px
        padding 5px

  ul.top-nav
    float right
    list-style-type none
    margin 0
    padding 0

    li
      list-style-type none
      float left
      display inline-block
      padding 18px 18px 19px 18px
      color inherit
      text-decoration none
      cursor pointer
      color $secondary-blue !important
      letter-spacing .05em

      &:hover
        color $hover !important

      &.active
        color $blue !important

      &.donate
        padding 0

        a
          color $hover
          padding 18px 18px 19px 18px
          display block
          font-weight 100

          &:hover
            background $hover
            color white

.subheader
  ul
    width 100%
    float left
    text-align center
    list-style-type none
    margin auto
    padding 0

    li
      display inline-block
      padding 2em 16px
      color $secondary-blue !important
      text-transform: uppercase;
      letter-spacing: .05em;

      &.active
        color $blue !important

      &:hover
        color $hover !important
        cursor pointer