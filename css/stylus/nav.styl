nav
  top 0
  position fixed
  z-index 20
  font-family 'Open Sans', sans-serif
  float left
  display inline-block
  width 100%
  background-color #fff
  color $blue
  border-bottom 1px solid #f5f5f5

  .logo
    float left

    li
      list-style-type none
      float left
      cursor pointer

      img
        float left
        height 55px
        padding 5px

  ul.top-nav
    float right
    list-style-type none
    margin 0
    padding 0

    li
      list-style-type none
      float left
      display inline-block
      padding 16px 16px 17px 16px
      color inherit
      text-decoration none
      cursor pointer
      color $secondary-blue !important
      text-transform uppercase
      letter-spacing .05em

      &:hover
        color $hover !important

      &.active
        color $blue !important
      
      &.donate
        background $hover

        a
          color white
          font-weight 100

.subheader
  font-family 'Open Sans', sans-serif
  display inline-block
  width 100%

  ul
    width 100%
    float left
    text-align center
    list-style-type none
    margin auto
    padding 0

    li
      display inline-block
      padding 2em 16px
      color $secondary-blue !important

      &.active
        color $blue !important

      &:hover
        color $hover !important
        cursor pointer