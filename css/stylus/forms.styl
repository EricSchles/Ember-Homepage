.form

  h1
    margin-top 0

  input, textarea, label
    font-size 0.8em
    font-family 'Lora', serif
    display inline-block
    border none
    background lighten($secondary-blue, 90%)
    width 100%
    resize none
    padding 1em
    border-radius 2px
    outline none
    border 1px solid transparent

    &:hover
      background lighten($secondary-blue, 95%)
      border 1px solid lighten($secondary-blue, 88%)

  ul
    padding 0
    list-style-type none

    li
      margin-bottom 5px

      label
        color #A9A9A9

        input
          float left
          width initial
          margin 5px 0.5em 0 0

  textarea
    float left
    margin-bottom 5px

  .submit
    background #fff
    margin 2em initial 0
    font-size 1.3em
    padding 1em
    cursor pointer
    text-align center