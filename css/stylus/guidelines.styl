.guidelines, .termsOfService
  display none

  .page
    display inline-block
    font-size 67.5%
    background #eee !important
    padding-bottom 4em

    h1
      margin-top 0
      float left

    button
      button()
      background white
      float right
      margin-top 0
      width initial
      border none

      &:hover
        border none
        background white

  p, h4, li
    clear both

  ul
    li
      h4
        font-size 1.5em
        margin-bottom 0em

      p
        margin .7em 0

  ol
    display inline-block

    li
      display list-item
      margin 1em 0
      line-height 1.8em

      p
        a
          padding 0.2em
          background lighten($hover, 40%)
          margin 0 -0.2em
          border-radius $radius

          &:hover
            background $hover
            color initial

  td
    width 25%
    padding 20px 40px
    text-align center
    background white
    border none

    &.label
      font-weight 800
