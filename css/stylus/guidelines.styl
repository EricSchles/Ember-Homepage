.guidelines, .termsOfService
  display none

  .page
    display inline-block
    font-size 67.5%
    background #eee !important
    padding-bottom 4em

    button
      cursor pointer
      background white
      border none

      &:hover
        border none
        color $hover
        background white

    h1
      float left

    button
      float right
      width initial

  p, h4, li
    clear both

  ul
    li
      h4
        font-size 1.5em
        margin-bottom 0em

      p
        margin .7em 0

  ol
    display inline-block

    li
      display list-item
      margin 1em 0
      line-height 1.8em

  td
    width 25%
    padding 20px 40px
    text-align center
    background white
    border none

    &.label
      font-weight 800
