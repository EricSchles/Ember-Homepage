*
  box-sizing border-box
  font-weight 100
  color $blue
  transition all ease-in-out $transition-time

// COMMENTS
b
  color red

a
  text-decoration none
  color $blue
  font-weight 700

  &:hover
    color $hover

.hidden
  display none !important

html, body
  width 100%
  height 100%
  margin 0
  padding 0

body
  padding-top 56px
  background $blue

.container
  background #fff

.page
  font-family 'Lora', serif
  font-size 1.4em
  max-width 960px
  margin auto
  padding 30px
  padding-bottom 5em
  clear both

  h1
    font-size 2em
    margin-top 0

  img
    border-radius $radius
    width 100%

  ul
    margin 0
    padding 0

  ul
    list-style-type none

  p
    // display inline-block
    max-width 800px
    width 100%
    margin 20px auto
    line-height 1.8em
    letter-spacing 0.4px

    &.quote
      font-size 1.7em
      color $secondary-blue
      padding 20px

    &.caption
      color #b7bcbf
      text-align center

    &.link
      cursor pointer

      &:hover
        color $hover

  .excerpt
    margin 9px 0 100px 0
    
    p
      padding 0 100px
      font-style italic

  .drop
    &:first-letter
      float left
      color $hover
      font-size 3.5em
      line-height 3px
      padding-top 4px
      padding-right 8px
      padding-left 3px
      line-height 0.9em

  .secondaryLink
    float left
    font-size .8em
    color $secondary-blue
    margin-bottom 2em

    &:hover
      color $hover

  .activities
    width 100%
    display inline-block
    list-style-type none
    padding 0
    margin 45px 0 0

    li
        display inline-block
        box-sizing border-box
        width 32%
        margin 0 .5%
        float left
        background #EFF5F9
        border 1px solid #E5EFF6
        
        &:first-child
          margin-left 0

        &:hover
          background lighten($blue, 90%)
          border 1px solid lighten($blue, 89%)

        a
          display inline-block
          width 100%
          p
            text-align center
            color $blue

        img
            height 100%
            width 100%
            border-radius 100%