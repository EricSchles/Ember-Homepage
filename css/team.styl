@import 'vars'

.team
  display inline-block

  h1
    &:first-letter
      font-size 2.6em !important

  ul
    padding 0
    margin 0
    list-style-type none

    li
      display inline-block
      width 32.8%
      margin 30px 0

      img
        padding 5px
        margin-bottom 15px

      p
        margin 0 15px

        &.country
          font-size .9em
          color $secondary-blue