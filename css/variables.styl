$blue = #11242f
$secondary-blue = #B7BCBF
$hover = #FFC328
$transition-time = 0.2s
$radius = 2px

button()
  font-family 'Lora',serif
  display inline-block
  resize none
  outline none
  margin 2em initial 0
  padding 1em
  cursor pointer
  text-align center
  border-radius $radius
  background lighten($blue, 95%)
  border 1px solid lighten($blue, 92%)

  &:hover
    background lighten($blue, 90%)
    border 1px solid lighten($blue, 89%)